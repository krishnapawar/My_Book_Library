 <div class="form-row">
    <div class="form-col">
      <label>Title</label>
      <input type="text" name="title" value="<%= book.title %>">
    </div>
  <div class="form-col">
    <label>Author</label>
    <select name="author">
      <% authors.forEach(author => { %>
        <% if (author.id === book.author) { %>
      <option selected label="<%= author.name %>" value="<%= author.id %>">
          <% } else { %> 
            <option label="<%= author.name %> "  value="<%= author.id %>">
          <% } %> 
        <% }) %>
    </select>
    </div>
  </div>

<div class="form-row">
    <div class="form-col">
      <label>Publish Data</label>
      <input type="date" name="publishDate" 
      value="<%= book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0] %>">
    </div>
    <div class="form-col">
      <label>Page Count</label>
      <input type="number" name="pageCount" min="1" value="<%= book.pageCount %>">
    </div>
</div>

<div class="form-row">
  <div class="form-col font-col-no-grow">
    <label>Cover</label>
    <input type="file" name="cover"class="filepond" >
  </div>  
  <div class="form-col">
    <label>Description</label>
    <textarea name="description"><%= book.description %></textarea>
  </div>
</div>        
        